#!/usr/bin/setup
# -*- mode: shell-script -*-
Setup.use Pkg Doc

case "$1" in
    package)
	libfiles=( $(find lib -type f) )
	libfiles=( "${libfiles[@]#lib/}" )
	Pkg.package \
	    Pkg.man-pages bashcomps.1 \
	    Pkg.files etc/profile.d/bashcomps.sh=etc/bashcomps.sh \
	    $(for lib in "${libfiles[@]}"; do echo "usr/share/bash/$lib=lib/$lib"; done)
	;;
esac
